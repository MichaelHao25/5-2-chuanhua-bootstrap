						if attr>3
							top (b / 2) + 10px	
							left b * (attr % 4) + (b / 2)
							&:after
								top -(b / 2)
								border (b / 2) solid transparent
								border-bottom-color #c9a063
							&:before
								bottom -(b / 2)
								border (b / 2) solid transparent

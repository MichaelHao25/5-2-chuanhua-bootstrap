	.system
		.pic-wrap
			img
				display block
				width 100%
		.wid
			var b = 284px
			position relative
			height b + (b / 2) + 10px
			.item
				position absolute
				width b
				height b
				padding-top 0
				left 0
				top 0
				transition 0.3s
				&.bgc9a063
					&:after
						border-bottom-color #c9a063
					&:before
						border-top-color #c9a063
				&:after
					content ""
					position absolute
					z-index -1
					top -(b / 2)
					left 0
					border (b / 2) solid transparent
					border-bottom-color #604c40
				&:before
					content ""
					position absolute
					z-index -1
					bottom -(b / 2)
					left 0
					border (b / 2) solid transparent
					border-top-color #604c40
				h4
					padding-top 30%
					font-size 22px
					color #fff
					line-height 2
					text-align center
				div
					font-size 14px
					color #c9a063
					line-height 2
					text-align center
			for attr in 0..7
				.item{attr+1}
					left b * (attr % 4) 
					if attr>3
						top (b / 2) + 10px	
						left b * (attr % 4) + (b / 2)
						div
							color #604c40
						&:after
							border-bottom-color #c9a063
						&:before
							border-top-color #c9a063

		@media(max-width 992px)
			.wid
				b= 360px
				height b*3 + 10px*4
				.item
					width b
					height b
					&:after
						top -(b / 2)
						border (b / 2) solid transparent
						border-bottom-color #604c40
					&:before
						bottom -(b / 2)
						border (b / 2) solid transparent
						border-top-color #604c40
				for attr in 0..7
					.item{attr+1}
						left b * (attr % 2) + (b / 2)
						top 0
						// left b * (attr % 4) 
						if attr>0
							top (b / 2) +  10px	
							left b * (attr - 1)
							// &:after
							// 	top -(b / 2)
							// 	border (b / 2) solid transparent
							// 	border-bottom-color #c9a063
							// &:before
							// 	bottom -(b / 2)
							// 	border (b / 2) solid transparent
							// 	border-top-color #c9a063
						if attr > 2
							top (b / 2) * 2  +  10px*2	
							left b * (attr - 2) - (b / 2)
						if attr > 3
							top (b / 2) * 3  +  10px*3	
							left b * (attr - 4)
							&:after
								top -(b / 2)
								border (b / 2) solid transparent
								border-bottom-color #c9a063
							&:before
								bottom -(b / 2)
								border (b / 2) solid transparent
								border-top-color #c9a063
						if attr > 5
							top (b / 2) * 4  +  10px*4	
							left b * (attr - 5) -  (b / 2)
						// if attr>2
						// 	top (b / 2 ) * 2 + 10px *2
						// 	left b * (attr % 2) + (b / 2)
						// if attr>4
						// 	top (b / 2 ) * 3 + 10px *3
